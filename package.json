{
  "name": "@yermak/derived",
  "version": "0.0.3",
  "description": "State manager library",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "private": false,
  "author": "Yermak Aleksandr",
  "license": "MIT",
  "keywords": [
    "react",
    "state manager",
    "typescript"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "_build:ga": "yarn build && mkdir build && mv dist build/dist && mv package.json build/package.json",
    "lint": "eslint \"{**/*,*}.{ts,tsx}\"",
    "husky-init": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "files": [
    "./dist",
    "./package.json"
  ],
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./rollup.config.js"
  ],
  "lint-staged": {
    "**/*.{js,jsx,json}": [
      "eslint . --fix",
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SelenZzz/yermak-derived.git"
  },
  "devDependencies": {
    "@babel/core": "^7.21.5",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.21.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  }
}
